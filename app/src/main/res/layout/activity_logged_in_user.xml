<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light"
    tools:context=".LoggedInUser">

    <TextView
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:text="Welcome to Restaurant finder"
        android:textSize="25dp" />

    <Button
        android:id="@+id/Bshowres"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="214dp"
        android:onClick="onclickshow"
        android:text="Show Restaraunts" />

    <Button
        android:id="@+id/Bsugrest"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/Bshowres"
        android:layout_marginEnd="37dp"
        android:onClick="onclicksug"
        android:text="Suggest Restaraunts" />
</RelativeLayout>