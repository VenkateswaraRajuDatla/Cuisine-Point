<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="29dp"
        android:text="Name"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/TFname"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/TFemail"
        android:layout_marginBottom="-10dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="83dp"
        android:text="Email"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/TFemail"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginTop="-11dp"
        android:layout_toEndOf="@+id/textView7"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="133dp"
        android:text="Username"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/TFuname"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/TFname"
        android:layout_alignTop="@+id/textView7"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignTop="@+id/TFpass1"
        android:text="Password"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/TFpass1"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="190dp"
        android:layout_toEndOf="@+id/textView9"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_centerVertical="true"
        android:text="Conf password"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/TFpass2"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/TFuser_type"
        android:layout_centerVertical="true"
        android:layout_marginEnd="-26dp"
        android:ems="10"
        android:inputType="textPersonName" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TFPhone"
        android:layout_alignStart="@+id/textView4"
        android:text="Phone"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/TFPhone"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/TFpass2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="192dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TFuser_type"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:text="UserType"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/TFuser_type"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/TFname"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/Bsignupbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp"
        android:onClick="onSignUpClick"
        android:text="Signup" />

</RelativeLayout>
